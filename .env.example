# Database Configuration
# For local development, use these values
# For Heroku, these will be set automatically from CLEARDB_DATABASE_URL
DB_HOST=127.0.0.1
DB_NAME=nichenest
DB_USER=nichenest
DB_PASS=nichenest123

# Application Configuration
APP_NAME=NicheNest
APP_URL=http://localhost:8000
UPLOAD_PATH=uploads/

# Logging Configuration
# Enable or disable logging (true/false)
LOG_ENABLED=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG: Detailed diagnostic info
# INFO: General informational messages (default)
# WARNING: Warning messages
# ERROR: Error conditions
# CRITICAL: Critical conditions
LOG_LEVEL=INFO

# Directory where log files are stored (relative to project root)
LOG_DIRECTORY=logs

# Maximum log file size in bytes (default: 5242880 = 5MB)
LOG_MAX_FILE_SIZE=5242880

# Maximum number of rotated log files to keep (default: 5)
LOG_MAX_FILES=5

# Database URL (Heroku ClearDB format)
# Example: mysql://username:password@hostname/database_name
# CLEARDB_DATABASE_URL will be set automatically by Heroku
